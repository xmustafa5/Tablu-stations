generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  name      String
  role      Role     @default(USER)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  reservations Reservation[]

  @@map("users")
}

enum Role {
  ADMIN
  USER
}

model Location {
  id          String   @id @default(uuid())
  name        String   @unique
  description String?
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  reservations Reservation[]

  @@map("locations")
}

model Reservation {
  id             String            @id @default(uuid())
  advertiserName String
  customerName   String
  location       String?           // Keep old field temporarily for migration
  startTime      DateTime
  endTime        DateTime
  status         ReservationStatus @default(WAITING)
  createdAt      DateTime          @default(now())
  updatedAt      DateTime          @updatedAt

  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  locationId String?               // Make optional for migration
  locationRef   Location? @relation(fields: [locationId], references: [id], onDelete: Restrict)

  @@index([userId])
  @@index([status])
  @@index([startTime, endTime])
  @@index([locationId])
  @@map("reservations")
}

enum ReservationStatus {
  WAITING
  ACTIVE
  ENDING_SOON
  COMPLETED
}
